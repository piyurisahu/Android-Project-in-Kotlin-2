<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E98D2F"
    tools:context=".CtoFFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/cToFHeadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Paravastu Week 4 -C to F"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/celciusEditText"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:layout_below="@id/cToFHeadingTextView"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/background_light"
        android:hint="Enter Farenheit Number" />


    <TextView
        android:id="@+id/fResultTextView"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/celciusEditText"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/background_light"
        />

    <Button
        android:id="@+id/cToFbutton"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/fResultTextView"

        android:layout_marginTop="50dp"
        android:text="Convert to Farenheit"
        />

    <ImageView
        android:layout_width="275dp"
        android:layout_height="216dp"
        android:layout_below="@id/cToFbutton"
        android:layout_marginTop="75dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher_background" />

</RelativeLayout>