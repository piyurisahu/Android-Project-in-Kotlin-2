<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TravelCalculatorFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:includeFontPadding="true"
        android:text="Sahu Midterm CIS 5656"
        android:textSize="24sp" />
    <EditText
        android:id="@+id/speedText"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/title"
        android:hint="@string/enter_speed" />

    <EditText
        android:id="@+id/distanceText"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@+id/speedText"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:hint="@string/enter_distance" />

    <Button
        android:id="@+id/describe"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/distanceText"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="75dp"
        android:text="OK"/>

</RelativeLayout>